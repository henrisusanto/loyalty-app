{
  "name": "fastro-web",
  "version": "1.2.0",
  "description": "fastify, react, typescript",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV='production' node dist/main.js",
    "dev": "NODE_ENV='development' nodemon dist/main.js",
    "postcss": "postcss src/web/assets/tailwind.css -c postcss.config.js -o src/web/assets/styles.css",
    "build": "NODE_ENV='production' rm -rf dist && rm -rf public && npm run eslint && npm run postcss && tsc --p tsconfig.build.json && npm run webpack",
    "docker": "docker-compose up",
    "watch": "rm -rf dist & mkdir dist & tsc --watch --p tsconfig.build.json",
    "webpack": "webpack --config dist/webpack.config.js",
    "eslint": "eslint 'src/**/*.ts*'",
    "test": "jest"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "fastify": "^2.13.0",
    "fastify-plugin": "^1.6.1",
    "fastro": "^0.1.2",
    "mysql": "^2.18.1",
    "point-of-view": "^3.8.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/ejs": "^3.0.2",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/jest": "^25.1.5",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/node": "^13.11.0",
    "@types/optimize-css-assets-webpack-plugin": "^5.0.1",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@types/react-router-dom": "^5.1.3",
    "@types/terser-webpack-plugin": "^2.2.0",
    "@types/uuid": "^7.0.2",
    "@types/webpack": "^4.41.10",
    "@types/webpack-dev-middleware": "^3.7.0",
    "@types/webpack-hot-middleware": "^2.25.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "autoprefixer": "^9.7.5",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "eslint-plugin-standard": "^4.0.1",
    "html-webpack-plugin": "^3.2.0",
    "install": "^0.13.0",
    "jest": "^25.2.7",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.2",
    "npm": "^6.14.4",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss": "^8.2.10",
    "postcss-cli": "^7.1.0",
    "postcss-loader": "^3.0.0",
    "purgecss-webpack-plugin": "^2.1.0",
    "react-hot-loader": "^4.12.20",
    "style-loader": "^1.1.3",
    "tailwindcss": "^1.2.0",
    "terser-webpack-plugin": "^2.3.5",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "nodemonConfig": {
    "ignore": [
      "public/*"
    ]
  },
  "jest": {
    "verbose": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "stylelint": {
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "author": "ynwd",
  "license": "ISC"
}
